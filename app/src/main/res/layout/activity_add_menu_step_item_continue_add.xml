<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    android:background="@color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/layout_add_menu_step_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_activity_add_menu_steps_item_upload_photo"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:background="#fff"
            android:scaleType="fitXY"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ico_add_menu_step" >
        </ImageView>

        <TextView
            android:id="@+id/tv_activity_add_menu_steps_desc"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center"
            android:singleLine="true"
            android:text="添加步骤"
            android:textColor="@color/home_bottom_active"
            android:textSize="16sp" >
        </TextView>
        <TextView
            android:background="@color/white"
            android:id="@+id/tv_activity_add_menu_steps_menu_item_del"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:visibility="invisible"
            android:gravity="center"
            android:singleLine="true"
            android:text="删除该步骤" >
        </TextView>
    </LinearLayout>

   

</LinearLayout>