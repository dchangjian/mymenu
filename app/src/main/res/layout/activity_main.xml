<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  	android:background="#fff"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/activity_main_container"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </FrameLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#ccc" >
    </View>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/layout_activity_main_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/iv_activity_main_view"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/home_menu_ico_view" >
            </ImageView>

            <TextView
                android:id="@+id/tv_activity_main_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_activity_main_view"
                android:layout_centerHorizontal="true"
                android:text="查看"
                android:textColor="@color/home_bottom"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_activity_main_classify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/iv_activity_main_classify"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:src="@drawable/home_menu_ico_classify" />

            <TextView
                android:id="@+id/tv_activity_main_classify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_activity_main_classify"
                android:layout_centerHorizontal="true"
                android:text="分类"
                android:textColor="@color/home_bottom"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_activity_main_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/iv_activity_main_mine"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/home_menu_ico_me" >
            </ImageView>

            <TextView
                android:id="@+id/tv_activity_main_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_activity_main_mine"
                android:layout_centerHorizontal="true"
                android:text="我的"
                android:textColor="@color/home_bottom"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>